@model Product
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_LayoutLIn.cshtml";
}

@section one{}

<html>
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
  <link rel="stylesheet" href="~/css/user.css" />
  <title>Sign Up</title>
</head>
<body>
  <div class="mainBox">
      <div class="darkFilter"></div>
          <div class="mainBord">
              <form action="/product/edit/@Model.ProductId" method="post">
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="ProductName" class="formLabel">Product Name</label>
                        <input type="hidden" name="ProductID" value="@Model.ProductId" />
                        <input type="text" class="form-control" id="ProductName" name="ProductName" placeholder="ProductName" value="@Model.ProductName">
                    </div>
                    <div class="form-group col-md-6">
                        <label for="Description" class="formLabel">Description</label>
                        <input type="text" class="form-control" id="Description" name="Description" placeholder="Description" value="@Model.Description">
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="Quantity" class="formLabel">Quantity</label>
                        <input type="number" class="form-control" id="Quantity" name="Quantity" placeholder="Quantity" value="@Model.Quantity">
                    </div>
                    <div class="form-group col-md-6">
                        <label for="Price" class="formLabel">Price</label>
                        <input type="number" class="form-control" id="Price" name="Price" placeholder="Price" value="@Model.Price">
                    </div>
                </div>
                <button type="submit" class="btn btn-success">Save</button>
                <a class="btn btn-danger" href="/product/index">Cancel</a>
              </form>
          </div>
  </div>
</body>
</html>

