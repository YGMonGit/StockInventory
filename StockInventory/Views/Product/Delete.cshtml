@model Product

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_LayoutLIn.cshtml";
}

@section one{}

<html>
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
  <link rel="stylesheet" href="~/css/user.css" />
  <title>Sign Up</title>
</head>
<body>
  <div class="mainBox">
      <div class="darkFilter"></div>
          <div class="mainBord">
            <h2 style="color: white;">Delete Product</h2>
            <form action="/product/delete/@Model.ProductId" method="post">
                <table class="table" style="color: white;">
                    <tr>
                        <td>
                            <label for="ProductName">Product Name</label>
                        </td>
                        <td>
                            <input type="hidden" name="ProductID" value="@Model.ProductId" />
                            @Model.ProductName
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <label for="Price">Price</label>
                        </td>
                        <td>
                            @Model.Price
                        </td>
                    </tr>
                </table>

                <div style="color: white;">Are you sure to delete this product?</div>
                <button type="submit" class="btn btn-danger">Delete</button>
                <a class="btn btn-warning" href="/product/index">Cancel</a>
            </form>
          </div>
  </div>
</body>
</html>

