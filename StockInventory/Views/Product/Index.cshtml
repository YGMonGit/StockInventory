@model List<Product>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutLIn.cshtml";
}

@section one{}

<html>
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
  <link rel="stylesheet" href="~/css/user.css" />
  <title>Sign Up</title>
</head>
    <body>
        <div class="mainBox">
            <div class="darkFilter"></div>
                <div class="mainBord">
                    <h1 style="color: white; text-align: center;">Product Detail</h1>
                    
                    <div class="text-white">
                        <a href="/product/create" class="btn btn-outline-success" style="margin-bottom:20px;">Add New Product</a>
                    </div>
                    <p>
                    <form method="get" asp-action="Index" style="margin: 0; padding: 0;">
                        
                            <input type="search" placeholder="Enter product name" value="@ViewData["GetTheData"]" name="ProductSearch" style="width:370px; display:inline;" class="form-control"/>
                            
                             <input type="submit" value="Search" style="display: inline;" class="btn btn-primary" />
                            <a asp-action="Index">Get All Products</a>
                       
                    </form>
                    <form method="Post" asp-action="Export" style="margin: 0; padding: 0;">
                   
                                <input type="submit" value="Export"   style="display: inline;" class="btn btn-primary" />    
                            
                      </form>
                       </p>
                    
                    <table class="table" style="color: white;">
                        <tr>
                            <th>Product ID</th>
                            <th>Product Name</th>
                            <th>Description</th>
                            <th>Quantity</th>
                            <th>Price</th>
                            <th>Details</th>
                            <th>Edit</th>
                            <th>Delete</th>
                        </tr>
                        @foreach (var item in Model)
                        {
                            if (item.Quantity <= 10) { 
                                <tr style="color:red">
                                    <td>@item.ProductId</td>
                                    <td>@item.ProductName</td>
                                    <td>@item.Description</td>
                                    <td>@item.Quantity</td>
                                    <td>@item.Price</td>
                                    <td>
                                        <a href="/Product/Details/@item.ProductId" class=" btn btn-outline-info">Details</a>
                                    </td>
                                    <td>
                                        <a href="/product/edit/@item.ProductId" class=" btn btn-outline-primary">Edit</a>
                                    </td>
                                    <td>
                                        <a href="/product/delete/@item.ProductId" class=" btn btn-outline-danger">Delete</a>
                                    </td>
                                </tr>
                            }else{
                                <tr>
                                    <td>@item.ProductId</td>
                                    <td>@item.ProductName</td>
                                    <td>@item.Description</td>
                                    <td>@item.Quantity</td>
                                    <td>@item.Price</td>
                                    <td>
                                        <a href="/Product/Details/@item.ProductId" class=" btn btn-outline-info">Details</a>
                                    </td>
                                    <td>
                                        <a href="/product/edit/@item.ProductId" class=" btn btn-outline-primary">Edit</a>
                                    </td>
                                    <td>
                                        <a href="/product/delete/@item.ProductId" class=" btn btn-outline-danger">Delete</a>
                                    </td>
                                </tr>
                             }
                        }
                    </table>
                </div>
        </div>
    </body>
</html>
