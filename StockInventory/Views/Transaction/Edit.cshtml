@model Transaction
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_LayoutLIn.cshtml";
}

@section one{}

<html>
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
  <link rel="stylesheet" href="~/css/user.css" />
  <title>Sign Up</title>
</head>
<body>
  <div class="mainBox">
      <div class="darkFilter"></div>
          <div class="mainBord">
              <form action="/Transaction/edit/@Model.TransactionId" method="post">
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label asp-for="ProductId">Product Id</label>
                        <input type="hidden" asp-for="TransactionId" value="@Model.TransactionId" />
                        <input type="text" asp-for="ProductId" class="form-control" placeholder="Product Id" value="@Model.ProductId">
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="SupplierId">Description</label>
                        <input type="text" asp-for="SupplierId" class="form-control" placeholder="SupplierId" value="@Model.SupplierId">
                    </div>
                </div>
                <div class="form-row">
                    @{
                        if(Model.PurchasedQuantity == 0)
                        {
                                <input type="hidden" asp-for="PurchasedQuantity" class="form-control" placeholder="Purchased Quantity" value="@Model.PurchasedQuantity">
                            <div class="form-group col-md-6">
                                <label asp-for="SoldQuantity">Sold Quantity</label>
                                <input type="number" asp-for="SoldQuantity" class="form-control" placeholder="Sold Quantity" value="@Model.SoldQuantity">
                            </div>
                        }
                        if(Model.SoldQuantity == 0){
                            <div class="form-group col-md-6">
                                <label asp-for="PurchasedQuantity"></label>
                                <input type="text" asp-for="PurchasedQuantity" class="form-control" placeholder="Purchased Quantity" value="@Model.PurchasedQuantity">
                            </div>
                                <input type="hidden" asp-for="SoldQuantity" class="form-control" placeholder="Sold Quantity" value="@Model.SoldQuantity">
                        }
                    }
                    <div class="form-group col-md-6">
                        <label asp-for="DateOfPurchase" class="formLabel"></label>
                        <input asp-for="DateOfPurchase" class="form-control">
                        <span asp-validation-for="DateOfPurchase" class="text-danger"></span>
                    </div>
                </div>
                <button type="submit" class="btn btn-success">Save</button>
                <a class="btn btn-danger" href="/Transaction/Index">Cancel</a>
              </form>
          </div>
  </div>
</body>
</html>

