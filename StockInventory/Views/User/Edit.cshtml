@{
     ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_LayoutLIn.cshtml";
}

@section one{}

<html>
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
  <link rel="stylesheet" href="~/css/user.css" />
  <title>User update</title>
</head>
<body>
  <div class="mainBox">
      <div class="darkFilter"></div>
          <div class="mainBord">
              
                  <form action="/user" method="Post">
                      <div class="form-row">
                         <div class="form-group col-md-6">
                        <label asp-for="FirstName" class="formLabel">First Name</label>
                        <input asp-for="FirstName" class="form-control" value= "@Model.FirstName">
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="LastName" class="formLabel">Last Name</label>
                        <input asp-for="LastName" class="form-control" value="@Model.LastName">
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label asp-for="UserName" class="formLabel"></label>
                        <input asp-for="UserName" class="form-control" vaule="@Model.UserName">
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="Password" class="formLabel"></label>
                        <input asp-for="Password" class="form-control"  vaule="@Model.Password">
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label asp-for="PhoneNumber" class="formLabel">Phone Number</label>
                        <input asp-for="PhoneNumber" class="form-control" vaule="@Model.PhoneNumber">
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                </div>
                
                <button type="submit" class="btn btn-success">Save</button>
                <a class="btn btn-danger" href="/home/accountsetting">Cancel</a>
               </form>
                 
                 
             
          </div>
  </div>
</body>
</html>

