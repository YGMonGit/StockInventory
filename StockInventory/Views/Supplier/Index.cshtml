@model List<Supplier>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
     ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutLIn.cshtml";
}
@section one{}

<html>
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
  <link rel="stylesheet" href="~/css/user.css" />
  <title>Sign Up</title>
</head>
    <body>
        <div class="mainBox">
            <div class="darkFilter"></div>
                <div class="mainBord">
                    <h1 style="color: white; text-align: center;">Suppliers Detail</h1>
                    
                    <div class="text-white">
                        <a href="/Supplier/create" class="btn btn-outline-success" style="margin-bottom:20px;">Add New Supplier</a>
                    </div>

                    <form method="get" asp-action="Index">
                        <p>
                            <input type="search" placeholder="Enter supplier name" value="@ViewData["GetTheData"]" name="supplierSearch" style="width:500px; display:inline;" class="form-control"/>
                            <input type="submit" value="Search" class="btn btn-primary" />
                            <a asp-action="Index">Get All Suppliers</a>
                        </p>
                    </form>
                    
                    <table class="table" style="color: white;">
                        <tr>
                            <th>Company Name</th>
                            <th>Phone Number</th>
                            
                        </tr>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.CompanyName</td>
                                <td>@item.PhoneNumber</td>
                                
                                <td>
                                    <a href="/Supplier/Details/@item.SupplierId" class=" btn btn-outline-info">Details</a>
                                </td>
                                <td>
                                    <a href="/Supplier/edit/@item.SupplierId" class=" btn btn-outline-primary">Edit</a>
                                </td>
                                <td>
                                    <a href="/Supplier/delete/@item.SupplierId" class=" btn btn-outline-danger">Delete</a>
                                </td>
                            </tr>
                        }
                    </table>
                </div>
        </div>
    </body>
</html>
