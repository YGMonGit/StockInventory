@{
     ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_LayoutLIn.cshtml";
}

@section one{}


<html>
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
  <link rel="stylesheet" href="~/css/user.css" />
  <title>Sign Up</title>
</head>
<body>
  <div class="mainBox">
      <div class="darkFilter"></div>
          <div class="mainBord">
              <form action="/Supplier/create" method="post">
                    <div class="form-row">
                    <div class="form-group col-md-6">
                        <label asp-for="CompanyName" class="formLabel">Company Name</label>
                        <input asp-for="CompanyName" class="form-control">
                        <span asp-validation-for="CompanyName" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="PhoneNumber" class="formLabel">Phone Number</label>
                        <input type="number" asp-for="PhoneNumber" class="form-control">
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                </div>
                <button type="submit" class="btn btn-success">Create</button>
                <a class="btn btn-danger" href="/supplier/index">Cancel</a>
            </form>
          </div>
  </div>
</body>
</html>

